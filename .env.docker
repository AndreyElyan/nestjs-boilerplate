# Docker-specific environment variables
# Copy this to .env when using docker-compose

# Application
NODE_ENV=development
PORT=3000
APP_NAME=NestJS Boilerplate
APP_VERSION=1.0.0

# Database (Docker service names)
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=nestjs_boilerplate
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE=NestJS Boilerplate API
SWAGGER_DESCRIPTION=Modern NestJS Boilerplate with Clean Architecture
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs
